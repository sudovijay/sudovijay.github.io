{
    "name": "sudovijay-web",
    "version": "1.0.0",
    "main": "src/index.js",
    "description": "A simple boilerplate to start with for both frontend & backend projects",
    "repository": "git@github.com:sudovijay/boilerplate-web.git",
    "author": "Vijay Singh <sudovijay@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "NODE_ENV=development webpack --watch --mode development",
        "build": "NODE_ENV=production webpack --mode production",
        "dev": "NODE_ENV=development webpack --mode development",
        "format": "prettier --write --single-quote --print-width=120 --parser=flow --tab-width=2 \"src/**/*.{js,jsx}\"",
        "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
        "precommit": "lint-staged",
        "git": "git add . && git commit -m"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "date-fns": "^1.29.0",
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "react-grid-system": "^4.0.1",
        "react-loadable": "^5.4.0",
        "react-router-dom": "^4.2.2",
        "react-transition-group": "1.x",
        "styled-components": "^3.3.2",
        "styled-normalize": "^4.0.0",
        "trianglify": "^1.2.0"
    },
    "devDependencies": {
        "autoprefixer": "^8.5.2",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.4",
        "babel-plugin-styled-components": "^1.5.1",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "browser-sync": "^2.24.4",
        "browser-sync-webpack-plugin": "^2.2.2",
        "clean-webpack-plugin": "^0.1.19",
        "connect-history-api-fallback": "^1.5.0",
        "file-loader": "^1.1.11",
        "glob-all": "^3.1.0",
        "hard-source-webpack-plugin": "^0.7.4",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^0.14.3",
        "lint-staged": "^7.1.3",
        "node-sass": "^4.9.0",
        "react-svg-loader": "^2.1.0",
        "url-loader": "^1.0.1",
        "webpack": "^4.10.2",
        "webpack-bundle-analyzer": "^2.13.1",
        "webpack-cli": "^2.1.4",
        "webpack-merge": "^4.1.2"
    },
    "lint-staged": {
        "*.{js,css,md,php,jsx}": [
            "/usr/local/bin/prettier --write",
            "git add"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ]
    }
}
